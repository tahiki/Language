<Window x:Class="Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Language"
        mc:Ignorable="d"
        Title="Шарафутдинов" Height="450" Width="800" FontFamily="Comic Sans MS"
        MinHeight="450" MinWidth="800" Icon="images/school_logo.ico" Background="#e7fabf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="images/school_logo.png" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Лангуаге" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"></TextBlock>

        <Frame Grid.Row="1" Grid.ColumnSpan="3" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"></Frame>
        
        
    </Grid>
</Window>
